<div class="container">
  <div class="row">
    <div class="col-xs-1">
      {{>signOut}}  
    </div>
    <div class="col-xs-10 col-xs-offset-1">
      <form class="form-inline" action="" method="post" name="form_citydetails" id="form_citydetails" enctype="multipart/form-data" onsubmit="return false;">
        <div class="form-group inline">
          <label id="search-form-label" for="f_elem_city">Search by City</label>
          <input class="ff_elem form-control" type="text" name="ff_nm_from[]" value="" id="f_elem_city" placeholder="Enter City" />
        </div>
        <div class="form-group inline">
          <label id="search-form-label" for="departure-input">Departure Date</label>
          <input type="date" class="form-control" id="departure-input">
        </div>
        <div class="form-group inline">
          <label id="search-form-label" for="return-input">Return Date</label>
          <input type="date" class="form-control" id="return-input">
        </div>
        <button type="search" class="btn btn-default inline" id="search-btn">Search</button>
      </form>
    </div>   
  </div> 

  <hr>

  <div class="row">
    <div class="col-xs-4">
      <div class="panel panel-info">
        <div class="panel-heading">Welcome, {{user.firstName}}!</div>
        <div class="panel-body" id="past">
          <table>
            <caption>Search History</caption>
            <tr>
              <th>City</th>
              <th>Start Date</th>
              <th>End Date</th>
            </tr>
            {{#each search}}
              <tr>
                <td><a target="_self" data-search-id={{id}} data-coordinates={{location}}>{{city}}</td>
                <td>{{startDate}}</td>
                <td>{{endDate}}</td>
              </tr>  
            {{/each}}
          </table>  
        </div>
      </div>
    </div>  
    <div class="col-xs-8">
      <div id="map">
      </div>
    </div>
  </div>

</div>

<script src="assets/js/bookmark.js" type="text/javascript"></script>
<script src="assets/js/search.js" type="text/javascript"></script>
<script src="assets/js/maps.js" type="text/javascript"></script>
<script src="assets/js/view.js" type="text/javascript"></script>
